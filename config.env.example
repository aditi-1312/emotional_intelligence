# Emotional Intelligence Mood Tracker Configuration
# Copy this file to config.env and fill in your actual values

# OpenAI API Key (for AI insights feature)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Flask Secret Key (for session management)
# Generate a random key: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your_secret_key_here

# Database Configuration
# For development: sqlite:///instance/emotional_intelligence.db
# For production: postgresql://user:password@localhost/dbname
DATABASE_URL=sqlite:///instance/emotional_intelligence.db

# CORS Origins (comma-separated list of allowed origins)
# For development: http://localhost:3000
# For production: https://your-domain.com
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Flask Environment
# For development: development
# For production: production
FLASK_ENV=development

# API Port (default: 5001)
PORT=5001

# Logging Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Model Configuration
# Path to trained models directory
MODELS_DIR=models/

# Data Configuration
# Path to data directory
DATA_DIR=data/

# Output Configuration
# Path to output directory for reports and logs
OUTPUT_DIR=output/ 